<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State ketika tanggal dipilih -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightgreen" /> <!-- Warna hijau -->
            <corners android:radius="50dp" /> <!-- Mengatur sudut agar terlihat lebih baik -->
        </shape>
    </item>

    <!-- State ketika tanggal tidak dipilih -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Warna transparan -->
        </shape>
    </item>
</selector>